<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:paddingLeft="@dimen/section_header_wrapper_padding_left"
    android:paddingTop="@dimen/section_header_wrapper_padding_top"
    android:paddingRight="@dimen/section_header_wrapper_padding_right"
    android:paddingBottom="@dimen/section_header_wrapper_padding_bottom"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/section_title"
        android:textColor="#000000"
        android:textSize="@dimen/section_title_text_size"
        android:text="Pop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginLeft="@dimen/section_title_underline_margin_left"
        android:layout_marginTop="@dimen/section_title_underline_margin_top"
        android:background="@color/PrimaryColor"
        android:layout_width="@dimen/section_title_underline_width"
        android:layout_height="@dimen/section_title_underline_height" />

</LinearLayout>